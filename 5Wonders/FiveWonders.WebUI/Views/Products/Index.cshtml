@model IEnumerable<FiveWonders.core.Models.Product>

<div id="products-page">
    <div class="pp-title-container" 
         style="background-image:url(https://cl-drupal.orientaltrading.com/sites/default/files/styles/1600x696_img/public/projects/hero/desktop/2x/diy-monster-balloon-table-garland-hero-bleed-desktop-3200x1391.jpg?itok=-LOnOR0V)">
        <div class="pp-title-dark-layer">
            <h2 class="pp-title-text">@ViewBag.pageName</h2>
        </div>
    </div>

    <h3 class="pp-t">@Model.Count().ToString() Products</h3>

    <div class="pp-products-section">
        @{string classTags = "col-lg-3 col-md-4 col-sm-4 col-xs-6";}

        @foreach (var product in Model)
        {
            string[] currentImageFiles = product.mImage.Split(',');
            string firstImage = currentImageFiles[0];

            <div class="@classTags fw-card-container pp-card-container">
                <a href="/products/item/@product.mID" class="fw-card-a" >
                    <div class="fw-product-container">
                        <div class="fw-card" style="box-shadow: none;">
                            <h4 class="fw-card-title">@product.mName</h4>
                            <img
                                 src="@Url.Content("~/Content/ProductImages/" + firstImage)"
                                 alt="@product.mName"
                                 class="fw-card-img pp-fw-card-img" />
                            <p class="fw-card-price">$@product.mPrice</p>
                            <p class="btn btn-primary btn-lg fw-card-btn">View Product</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
