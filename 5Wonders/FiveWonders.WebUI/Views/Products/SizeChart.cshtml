@model FiveWonders.core.Models.SizeChart

@{
    Layout = null;
    string imgSrc = Model.mImageType + Convert.ToBase64String(Model.mImage);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Size Chart - 5 Wonders Balloons</title>
</head>
<body style="background-color: black;">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <img src="@imgSrc" 
             alt="@Model.mChartName"
             style="height: 100vh; width: 100%; object-fit: contain;"
        />
    </div>
</body>
</html>
