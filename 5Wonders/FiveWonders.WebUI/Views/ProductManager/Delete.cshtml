        </dt>

        <dd>
            @Html.DisplayFor(model => model.mName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isDisplayed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isDisplayed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.mHtmlDesc)
        </dt>

        <dd>
