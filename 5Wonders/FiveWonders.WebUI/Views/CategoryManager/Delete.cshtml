@model FiveWonders.core.Models.Category

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.mID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.mCategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mCategoryName)
        </dd>

    </dl>

    @if(ViewBag.productsWithCategory.Length != 0)
    {
        <h2>Products with category <strong>@Html.DisplayFor(model => model.mCategoryName)</strong></h2>

        <table>
            @foreach(var product in ViewBag.productsWithCategory)
            {
                <tr>
                    <td>
                        <a href="/ProductManager/Edit/@product.mID">@product.mName</a>
                    </td>
                </tr>
            }
        </table>
    }

    <div class="form-actions no-color">
        @if(ViewBag.productsWithCategory.Length == 0)
        {
            using (Html.BeginForm()) 
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-default" />
            }
        }
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
