    <div class="gallery-section">
            @{string classTags = "col-lg-4 col-md-6 col-sm-6 col-xs-12";}

            @foreach (var item in Model)
            {

                <div class="@classTags pp-card-container">
                    <div class="fw-product-container">
                        <div class="fw-card" style="padding:1rem; background-color:rgba(253,253,253,1); border-radius: 10px; box-shadow: none; border: 2px solid #232425">
                            <div style="border: solid 1px lightgrey; background-color: white;">

                                <img alt="@item.mID"
                                        src="@Url.Content("~/Content/GalleryImages/" + item.mImageFile)"
                                        class="gallery-img"/>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    <nav aria-label="Page navigation" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <ul class="pagination">
            @if (ViewBag.CurrentPage - 1 > 0)
            {
                <li>
                    <a href="/Gallery/?Page=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 0; i < ViewBag.PageNumbers; i++)
            {
                <li><a href="/Gallery/?Page=@(i+1)">@(i+1)</a></li>
            }
            @if (ViewBag.CurrentPage + 1 <= ViewBag.PageNumbers)
            {
                <li>
                    <a href="/Gallery/?Page=@(ViewBag.CurrentPage <= 0 ? 1 : ViewBag.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
