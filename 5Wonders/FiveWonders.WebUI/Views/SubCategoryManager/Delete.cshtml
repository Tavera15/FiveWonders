@model FiveWonders.core.Models.SubCategory

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SubCategory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.mTimeEntered)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mTimeEntered)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.mSubCategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mSubCategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isEventOrTheme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isEventOrTheme)
        </dd>

    </dl>

    @if (ViewBag.productsWithSub.Length != 0)
    {
        <h2>Products with subcategory <strong>@Html.DisplayFor(model => model.mSubCategoryName)</strong></h2>

        <table>
            @foreach (var product in ViewBag.productsWithSub)
            {
                <tr>
                    <td>
                        <a href="/ProductManager/Edit/@product.mID">@product.mName</a>
                    </td>
                </tr>
            }
        </table>
    }

    <div class="form-actions no-color">

        @if (ViewBag.productsWithSub.Length == 0)
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-default" />
            }
        }

        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
