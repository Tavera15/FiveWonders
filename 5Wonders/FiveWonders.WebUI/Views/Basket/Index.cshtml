@model IEnumerable<FiveWonders.core.ViewModels.BasketItemViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product.mName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.basketItem.mSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.basketItem.mQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.mPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product.mName)
            </td>
            <td>
                @if (!String.IsNullOrWhiteSpace(item.product.mSizeChart))
                {
                    @Html.DisplayFor(model => item.basketItem.mSize)
                }
            </td>
            <td>
                @Html.DisplayFor(model => item.basketItem.mQuantity)
            </td>
            <td>
                @String.Format("{0:c}", item.product.mPrice)
            </td>
            <td>
                <a href="@Url.Action("RemoveFromCart", "Basket", new { Id = item.basketItemID })" class="btn btn-danger">Remove Item</a>
                @Html.ActionLink("Edit Item", "EditBasketItem", new { id = item.basketItemID })
            </td>
        </tr>
    }

    <tr>
        @if(Model.Count() > 0)
        {
            <td style="text-align:left">
                <a class="btn btn-default" href="@Url.Action("ClearBasket", "Basket")">Clear</a>
            </td>
            <td style="text-align: right">
                <a class="btn btn-success" href="@Url.Action("Index", "Checkout")">Checkout</a>
            </td>
        }

        <td colspan="4" style="text-align:right"><strong>Basket Total:</strong></td>
        <td>@String.Format("({0} items): {1:c}", (from q in Model select q.basketItem.mQuantity).Sum(), (from p in Model select p.product.mPrice * p.basketItem.mQuantity).Sum())</td>
    </tr>

</table>
