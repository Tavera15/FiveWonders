@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="/Search/"><img src="~/Content/Icons/Search16.png" alt="Search Icon"/></a></li>
            <li><a href="/Basket/"><img src="~/Content/Icons/Cart16.png" alt="Shopping Cart Icon"/></a></li>
            <li>
                @Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

            @if(User.IsInRole("FWondersAdmin"))
            {
                <li>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        Admin
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Managers/">Managers</a></li>    
                        <li><a href="/Orders/">Orders</a></li>    
                    </ul>
                </li>
            }
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Search/"><img src="~/Content/Icons/Search16.png" alt="Search Icon"/></a></li>
            <li><a href="/Basket/"><img src="~/Content/Icons/Cart16.png" alt="Shopping Cart Icon"/></a></li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
