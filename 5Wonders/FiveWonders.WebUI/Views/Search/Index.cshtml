@model FiveWonders.core.ViewModels.SearchViewModel

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="products-page">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12" style="display: flex; flex-direction: row; justify-content: center;">
            @Html.EditorFor(model => model.productNameinput, new { htmlAttributes = new { @placeholder = "Product Name", @class = "form-control", @style = "margin-right: 1rem;" } })
            <div class="">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.categoryInput, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.categoryInput, new SelectList(Model.allCategories), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.subCategories, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in Model.allSubcategories)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"
                                   name="subCategories"
                                   value="@item" />
                            @item
                        </label>
                    </div>
                }
            </div>
        </div>
    }
</div>

    @section Pagecss
{
    <link href="~/Content/5WondersCss/Card.css"
            rel="stylesheet" type="text/css" />

    <link href="~/Content/5WondersCss/ProductList.css"
            rel="stylesheet" type="text/css" />
}
